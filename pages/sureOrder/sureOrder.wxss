    justify-content: center;
    align-items: center;
    border-bottom:1px #eee solid;
}
.box1 .box2{
    width:90%;
    height:100%;
    border-bottom:1px #eee solid;
    font-size:28rpx;
}
.two-1{
    width:100%;
    height:100%;
    display: block;
    padding-top:25rpx;
}
.two-1 text{
    float:right;
}
.two-2{
    width:100%;
    height:100rpx;
    display:flex;
    align-items: center;
}
.box1 .box3{
    width:90%;
    height:100%;
    border-bottom:1px #eee solid;
    font-size:26rpx;

}
.bg{
    height: 20rpx;
    width: 100%;
}
.xz{
    width: 100%;
    height: 100rpx;
    background: #fff;
}
.xz .hao{
    width: 280rpx;
    line-height: 100rpx;
    font-size: 28rpx;
    float: left;
    padding-left: 33rpx;
}
.xz input{
    width: 350rpx;
    float: left;
    height: 100rpx;
